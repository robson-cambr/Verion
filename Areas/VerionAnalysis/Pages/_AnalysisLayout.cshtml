<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <!-- Meta Tags-->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Title -->
    <title>@ViewData["Title"] - Verion</title>
    <!--  Bootstrap  -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <!-- Font Awesome Icons -->
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <!-- .CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Verion.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <!-- JavaScript-->
    <script src="~/js/site.js"></script>
    <!-- Src Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js" charset="utf-8"></script>
</head>

<body>
    <div class="row p-0 m-0 vh-100">
        <div class="col-2 p-0">
            <!-- Side menu -->
            <div class="side-bar">
                <div class="menu">
                    <!-- Dashboard -->
                    <div class="item"><a href=""><i class="fas fa-chart-line"></i>Dashboard</a></div> <!-- Dashboard /> -->
                    <!-- Operation -->
                    <div class="item">
                        <a class="sub-btn"><i class="fas fa-table" aria-hidden="true"></i>Operação<i class="fas fa-angle-right dropdown"></i></a>
                        <div class="sub-menu">
                            <a href="" class="sub-item"><i class="fa fa-plus" aria-hidden="true"></i>Adicionar</a> <!-- Add -->
                            <a href="#" class="sub-item"><i class="fa fa-minus" aria-hidden="true"></i>Remover</a> <!-- Remove -->
                            <a href="#" class="sub-item"><i class="fa fa-desktop" aria-hidden="true"></i>Monitorar</a> <!-- Watch -->
                        </div>
                    </div> <!-- Operation /> -->
                    <!-- Vehicles -->
                    <div class="item">
                        <a class="sub-btn"><i class="fas fa-tractor" aria-hidden="true"></i>Veículos<i class="fas fa-angle-right dropdown"></i></a>
                        <div class="sub-menu">
                            <a href="#" class="sub-item"><i class="fa fa-plus" aria-hidden="true"></i>Adicionar</a>     <!-- Add -->
                            <a href="#" class="sub-item"><i class="fa fa-minus" aria-hidden="true"></i>Remover</a>      <!-- Remove -->
                            <a href="#" class="sub-item"><i class="fa fa-map-pin" aria-hidden="true"></i>Localizar</a>  <!-- Track -->
                        </div>
                    </div>  <!-- Vehicles /> -->
                    <!-- Report -->
                    <div class="item"><a href="#"><i class="fa fa-th-list" aria-hidden="true"></i>Relatório</a></div>   <!-- Report /> -->
                    <!-- Documentation -->
                    <div class="item"><a href="#"><i class="fas fa-info-circle"></i>Documentação</a></div>  <!-- Documentation /> -->
                </div>
            </div> <!-- Side Menu /> -->
        </div>

        <!-- Main Menu -->
        <div class="col p-0">
            <header class="main-menu">
                <nav class="navbar navbar-expand-sm navbar-toggleable-sm main-menu-display">
                    <div class="container-fluid">
                        <!-- Logo -->
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                            <img class="img-fluid" src="~/images/verion-analysis.png"> <!-- Img -->
                        </a> <!-- Logo />-->
                        <!-- Burguer -->
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button> <!-- Burguer /> -->
                        <!-- Menu Items -->
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                            <!-- Search Bar -->
                            <div class="input-box">
                                <input type="text" class="search-box" placeholder="Search...">
                                <span class="icon">
                                    <i class="fas fa-search search-icon"></i>
                                </span>
                                <i class="fas fa-times close-icon"></i>
                            </div> <!-- Search Bar /> -->
                            <!-- User -->
                            <i class="user-icon fas fa-user" onclick="toggleMenu()"></i>
                            <!-- User Menu Wrapper -->
                            <div id="user-menu" class="user-menu-wrap justify-content-end">
                                <!-- User Menu -->
                                <div class="user-menu">
                                    <div class="user-menu-info">
                                        <img class="user-picture-menu" src="~/images/profile-user-sq.png" />
                                        <h5>Verion Analysis</h5>
                                    </div>
                                    <a class="user-menu-links" href="#">
                                        <i class="custom-i fa fa-user" aria-hidden="true"></i><span>Editar Perfil</span> <!-- Edit Profile -->
                                    </a>
                                    <a class="user-menu-links" href="#">
                                        <i class="custom-i fa fa-cog" aria-hidden="true"></i><span>Configurações</span> <!-- Account Settings -->
                                    </a>
                                    <a class="user-menu-links" href="#">
                                        <i class="custom-i fas fa-question" aria-hidden="true"></i><span>Suporte</span> <!-- Support -->
                                    </a>
                                    <a class="user-menu-links" href="#">
                                        <i class="custom-i fas fa-sign-out-alt"></i><span>Logout</span> <!-- Logout -->
                                    </a>
                                </div> <!-- User Settings /> -->
                            </div> <!-- User Settings Wrapper /> -->
                            <!-- Notification Btn -->
                            <button type="button" class="icon-button">
                                <i class="fas fa-bell notification-icon" aria-hidden="true"></i>
                                <span class="icon-button__badge">2</span> <!-- Notification Counter -->
                            </button> <!-- Notification Btn /> -->
                        </div> <!-- Menu Items /> -->
                    </div>
                </nav>
            </header>

            <!-- Breadcrumb Navigation -->
            <div class="container-fluid">           
                <div class="breadcrumb-header">
                    <!-- Navigation Path -->
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Menu</a></li>
                        <li class="breadcrumb-item"><a href="#">Operação</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Monitorar</li>
                    </ol>
                </div>
            </div> <!-- Breadcrumb Navigation /> -->

            <!-- Render Page -->
            <div class="container-fluid">
                <main role="main" class="">
                    @RenderBody()
                </main>
            </div> <!-- Render Page /> -->
        </div>
        <!-- Main Menu /> -->
    </div>

    <!-- JavaScript -->
    <script type="text/javascript">
        @* Javascript - Expand/Collapse User Menu *@
            let userMenu = document.getElementById("user-menu")
        function toggleMenu() {
            userMenu.classList.toggle("open-menu");
        }

        $(document).ready(function () {
        @* JavaScript - Toggle in Menus *@
                $('.sub-btn').click(function () {
                    $(this).next('.sub-menu').slideToggle();
                    $(this).find('.dropdown').toggleClass('rotate');
                });

        @* JavaScript - Expand/Collpase Sidebar *@
                $('.menu-btn').click(function () {
                    $('.side-bar').addClass('active');
                    $('.menu-btn').css("visibility", "visible");
                });

            $('.close-btn').click(function () {
                $('.side-bar').removeClass('active');
                $('.menu-btn').css("visibility", "visible");
            });
        });

        @* Search Bar Expand/Collapse *@
            let inputBox = document.querySelector(".input-box"),
                searchIcon = document.querySelector(".icon"),
                closeIcon = document.querySelector(".close-icon");
        searchBox = document.querySelector(".search-box");

        searchIcon.addEventListener("click", () => inputBox.classList.add("open"));
        searchIcon.addEventListener("click", () => inputBox.classList.add("active"));
        closeIcon.addEventListener("click", () => inputBox.classList.remove("open"));
        closeIcon.addEventListener("click", () => inputBox.classList.remove("active"));

        searchIcon.addEventListener("click", () => searchBox.classList.add("active"));
        closeIcon.addEventListener("click", () => searchBox.classList.remove("active"));
    </script>

</body>
</html>

@page
@model LoginModel

@{
    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";
}
<div class="row justify-content-center">
    <div class="col-10">
        <section>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label"><i class="bi bi-person-fill"></i></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <hr />
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label"><i class="bi bi-lock-fill"></i></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class=" justify-con custom-control custom-checkbox">
                    <label asp-for="Input.RememberMe" class="custom-control-label">
                        <input type="checkbox" class="form-check-input custom-control-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                <hr />
                <div class="d-flex justify-content-between">
                    <p>
                        <a id="forgot-password" class="text-decoration-none" asp-page="./ForgotPassword">Password Recovery</a>
                    </p>
                    <!--
                    <p>
                        <a id="resend-confirmation" class="text-decoration-none" asp-page="./ResendEmailConfirmation">Resend Email</a>
                    </p>
                    -->
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}